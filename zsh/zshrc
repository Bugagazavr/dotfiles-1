# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(virtualenv git vagrant web-search bundler gem brew ruby heroku tmux)

source $ZSH/oh-my-zsh.sh

# User configuration

gdmbs() {
  git branch --merged | ag '^[^*].+' | awk '{print "git branch -d "$1}' | sh && git fetch -p
}

share_file() { 
  file=$1
  curl -F "file=@$file" http://curl.io/send/jnbvugmk
}

share_file_with_protected() { 
  file=$1
  gpg -c "$file" && curl -F "file=@$file" http://curl.io/send/aghrldqv
}

gclone() {
  git clone $1
  ~/bin/dotfiles/scripts/init_git_repo.sh
}

